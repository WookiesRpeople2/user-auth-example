<div class="flex justify-center items-center">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field my-4">
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class:inputs %>
  </div>

  <div class="field my-4">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:inputs %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password",class:blue_buttons %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
</div>
